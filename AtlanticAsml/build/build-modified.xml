<!-- How to configure this ant script:
	Run as->Ant Build...
		Set:
			- Base directory
			- Run in same JRE
			- Refresh

			- ANTLR jar (?)
			- ant contrib jar
			- AsmL compiler
-->
<project name="atlanticAsmL" default="atlanticAsmL">

	<property name="sourcePath" value="../../New metamodels/km3/" />
	<property name="targetPath" value="C:/Workspaces/MetamodelZoo_wkspace/New metamodels/ASML/" />
	<property name="projectPath" value="" />

	<taskdef resource="net/sf/antcontrib/antlib.xml">
	</taskdef>
	
	<target name="atlanticAsmL" depends="loadModels_AtlanticAsmL">

		<!--<antcall target="transformOne" inheritall="true" inheritrefs="true">
			<param name="sample" value="../../org.eclipse.am3.zoos.atlantic/XHTML.km3"/>
		</antcall>-->
		<!-- loop over all km3 models -->

		<for param="e">
		  <path>
		    <fileset dir="C:/Workspaces/MetamodelZoo_wkspace/New metamodels/km3/" includes="*.km3"/>
		  </path>
		  <sequential>
			<antcall target="condition" inheritall="true" inheritrefs="true">
				<param name="sample" value="@{e}"/>
			</antcall>
		  </sequential>
		</for>

	</target>
	
	<target name="condition">
	  	<basename property="name" file="${sample}" suffix=".km3"/>
		<property name="sourceModel" value="${sourcePath}${name}.km3"/>
		<property name="targetModel" value="${targetPath}${name}.asml"/>
		
		<uptodate property="isUpToDate" srcfile="${sourceModel}" targetfile="${targetModel}"/>
		
	  	<if>
	  	 <not>
			 <equals arg1="${isUpToDate}" arg2="true" />
		 </not>
		 <then>
			<antcall target="transformOne_AtlanticAsmL" inheritall="true" inheritrefs="true">
				<param name="name" value="${name}"/>
				<param name="sourceModel" value="${sourceModel}"/>
				<param name="targetModel" value="${targetModel}"/>
			</antcall>
		 </then>
		</if>

	</target>
	
	<!-- parameters: sample -->
	<target name="transformOne_AtlanticAsmL">

		<echo message="Transforming ${name}"/>
					
		<echo message="Extracting ${sourceModel}" />
		<!-- Inject KM3 file into KM3 model -->
		<am3.loadModel modelHandler="EMF" name="source" metamodel="KM3" path="${sourceModel}.xmi">
			<!--injector name="ebnf">
				<param name="name" value="KM3"/>
			</injector-->
		 </am3.loadModel>
		
		
		<echo message="Transforming ${name}-KM3.ecore to ${name}-AsmL.ecore" />
		<!-- Transform KM3 metamodel into AsmL model -->
		<am3.atl path="/org.eclipse.am3.zoos.atlanticAsmL/build/KM32AsmL.asm">
			<inModel name="IN" model="source"/>
			<inModel name="KM3" model="KM3"/>
			<inModel name="AsmL" model="AsmL"/>
			<outModel name="OUT" model="target" metamodel="AsmL"/>
		</am3.atl>

		<echo message="Extracting ${name}-AsmL.ecore to ${targetModel}" />
		<!-- Save target model -->
		<am3.saveModel model="target" path="${targetModel}">
			<extractor name="ebnf">
				<param name="format" value="AsmL.tcs" />
				<param name="stringDelim" value="&quot;" />
			</extractor>
		</am3.saveModel>
				
		<!-- Debug: serialize target model in XMI -->
		<!--<am3.saveModel model="target" path="${targetPath}${name}-AsmL.ecore"/>-->
			
		<echo message="Compilation ${targetModel} with asmlc.exe" />
		<!-- AsmL compilation-->
<!--	<exec executable="asmlc">
			<arg value="../${name}.asml"/>
		</exec>
						
		<echo message="Delete ${targetModel} compilation result files" />
-->
		<!-- Delete result files of compilation-->
<!--	<delete file="../${name}.pdb"/>
		<delete file="../${name}.exe"/>
-->
	</target>

	<target name="loadModels_AtlanticAsmL">
		<!-- Load KM3 metamodel -->
		<am3.loadModel modelHandler="EMF" name="KM3" metamodel="MOF" nsUri="http://www.eclipse.org/gmt/2005/KM3" />
		
		<!-- Load ASM metamodel-->
		<am3.loadModel modelHandler="EMF" name="AsmL" metamodel="MOF" path="/org.eclipse.am3.zoos.atlanticAsmL/build/AsmL.ecore" />
		
		<!-- Load TCS metamodel-->
		<am3.loadModel modelHandler="EMF" name="TCS" metamodel="MOF" path="C:/Workspaces/MetamodelZoo_wkspace/New metamodels/TCS.ecore" />
		
		<!-- Load AsmL TCS model-->
		<am3.loadModel modelHandler="EMF" name="AsmL.tcs" metamodel="TCS" path="/org.eclipse.am3.zoos.atlanticAsmL/build/AsmL.tcs.xmi">
			<!--injector name="ebnf">
				<param name="name" value="TCS" />
			</injector-->
		</am3.loadModel>
		

	</target>	
</project>
